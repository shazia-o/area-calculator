public class AreaCalculator {
//This is a small program that calculates the area of a circle and a rectangle
    
    public static double area(double radius) {
//Calculates the area of a circle, given its radius
        if (radius < 0) {
            return -1;            
        } else {
            return radius * radius * Math.PI;
        } 
    } 
    
    public static double area(double x, double y) {
//Calculates the area of a rectangle given its length and width, x and y
        if (x < 0 || y < 0) {
            return -1;
        } else {
            return x * y;
        } 
    }
    
}
